@model Hotel_NotFarOff.Models.Entities.Employee

<div>
    <h4>Информация о сотруднике</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ФИО
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            Должность
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Title)
        </dd>
        <dt class="col-sm-2">
            Паспорт
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Passport)
        </dd>
        <dt class="col-sm-2">
            Номер телефона
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            Дата рождения
        </dt>
        <dd class="col-sm-10">
            @Model.DateOfBirth.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Пол
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            Логин
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Login)
        </dd>
        <dt class="col-sm-2">
            Пароль
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Account.Password)
        </dd>
        <dt class="col-sm-2">
            Последнее изменение
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastChange)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="EmployeeEdit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="EmployeesList">Назад к списку</a>
</div>
