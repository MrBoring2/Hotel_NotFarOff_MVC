@model IEnumerable<Hotel_NotFarOff.Models.Entities.Employee>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ФИО
            </th>
            <th>
                Паспорт
            </th>
            <th>
                Номер телефона
            </th>
            <th>
                Дата рождения
            </th>
            <th>
                Пол
            </th>
            <th>
                Должность
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Passport)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Post.Title)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" title="Редактировать"><i class="nav-icon fas fa-edit fa-2xl" style="transform: scale(1.2,1);margin-right:3px;"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" title="Подробнее"><i class="nav-icon fas fa-info-circle fa-2xl" style="transform: scale(1.2,1);margin-right:3px;"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" title="Удалить"><i class="nav-icon fas fa-window-close fa-2xl" style="transform: scale(1.2,1);margin-right:3px;"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
