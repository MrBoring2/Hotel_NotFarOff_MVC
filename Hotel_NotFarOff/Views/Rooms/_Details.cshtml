@model Hotel_NotFarOff.Models.Entities.Room

<div>
    <h4>Информация о номере</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Номер комнаты
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomNumber)
        </dd>
        <dt class="col-sm-2">
            Категория номера
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomCategory.Title)
        </dd>
        <dt class="col-sm-2">
            Статус комнаты
        </dt>
        <dd class="col-sm-10">
            @Model.RoomStatus
        </dd>
        <dt class="col-sm-2">
            Последнее изменение
        </dt>
        <dd class="col-sm-10">
            @Model.LastChange
        </dd>
        <dt class="col-sm-2">
            Последним изменил
        </dt>
        <dd class="col-sm-10">
            @Model.LastEmlpoyee
        </dd>

    </dl>
</div>
<div>
    <a asp-action="RoomEdit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="RoomsList">Вернуться к списку</a>
</div>
