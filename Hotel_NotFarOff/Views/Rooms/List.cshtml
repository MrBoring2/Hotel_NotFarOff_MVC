@using Hotel_NotFarOff.Models.Entities
@using Hotel_NotFarOff.ViewModels

@{
    ViewData["Title"] = "Список номеров";
}

<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Список номеров</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Rooms Section Begin -->
<section class="rooms-section spad">
    <div class="container">
        @model IEnumerable<RoomInListViewModel>

        @foreach (var item in Model)
        {
            <div class="room-item">
                <div class="ri-text">
                    <h4 align="left">@item.Title</h4>
                    <img id="main-image" src="@Url.Action("GetFileFromBytes", "Rooms", new { id = @item.Id})" alt="">
                    <div class="right">
                        <h3>@item.PricePerDay.ToString("0.00") ₽<span>/За ночь</span></h3>
                        <table>
                            <tbody>
                                <tr>
                                    <td class="r-o">Площадь:</td>
                                    <td>@item.RoomSize кв. м.</td>
                                </tr>
                                <tr>
                                    <td class="r-o">Вместительность:</td>
                                    <td>Максимум гостей @item.NumbeOfSeats</td>
                                </tr>
                                <tr>
                                    <td class="r-o">Количество комнат:</td>
                                    <td>@item.RoomCount</td>
                                </tr>
                                <tr>
                                    <td class="r-o">Краткое описание:</td>
                                    <td>@item.ShortDescription</td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                    <br>
                    <a href="@Url.Action("Details", "Rooms", new {roomCategoryId = @item.Id})" class="primary-btn">Подробнее</a>
                </div>
            </div>
        }
    </div>
</section>
<!-- Rooms Section End -->