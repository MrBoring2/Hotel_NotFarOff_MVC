@using Hotel_NotFarOff.TagHelpersExtentions
@model IEnumerable<Hotel_NotFarOff.Models.Entities.Room>

<p>
    <a asp-action="Create"><a asp-action="Create">Добавить новый</a></a>
</p>
<table class="table" id="roomsTable">
    <thead>
        <tr>
            <th>
                Номер комнаты
            </th>
            <th>
                Статус номера
            </th>
            <th>
                Категория номера
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNumber)
                </td>
                <td>
                    @Html.IsBooked(item.IsBooked)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomCategory.Title)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" title="Редактировать"><i class="nav-icon fas fa-edit fa-2xl" style="transform: scale(1.2,1);margin-right:3px;"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" title="Подробнее"><i class="nav-icon fas fa-info-circle fa-2xl" style="transform: scale(1.2,1);margin-right:3px;"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" title="Удалить"><i class="nav-icon fas fa-window-close fa-2xl" style="transform: scale(1.2,1);margin-right:3px;"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
